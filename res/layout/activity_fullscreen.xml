<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout_full"
    android:background="#653464"
    android:padding="0.03in"
    tools:context="com.Kioye.count.FullscreenActivity" >

<LinearLayout
    android:id="@+id/linearlayoutfull"
    style="@style/layout_full"
    android:orientation="vertical"
    android:background="#f9f9f9"
    >

    <LinearLayout
        style="@style/layout_vertical"
        android:layout_weight="2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/texTitile"
            style="@style/layout_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Calculator"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#555555" />

        <TextView
            android:id="@+id/textShowtop"
            style="@style/layout_vertical"
            android:layout_weight="1.1"
            android:background="@drawable/topshow"
            android:ems="10"
            android:gravity="right|bottom"
            android:singleLine="true"     
            android:ellipsize="end" 
            android:textSize="0.13in"
            android:textColor="#788778"
            />

        <TextView
            android:id="@+id/textShowmiddle"
            style="@style/layout_vertical"
            android:layout_weight="1.3"
            android:background="@drawable/topshow"
            android:ems="10"
            android:gravity="right|bottom"
            android:singleLine="true"     
            android:ellipsize="end" 
            android:textSize="0.2in"
            android:textColor="#456789"
            />

        <EditText
            android:id="@+id/textShowbottom"
            style="@style/layout_vertical"
            android:layout_weight="2"
            android:background="@drawable/topshow"
            android:ems="10"
            android:inputType="number"
            android:gravity="right|bottom"
            android:singleLine="true"     
            android:ellipsize="end" 
            android:textSize="0.3in"
            android:textColor="#341434"
            />
		<LinearLayout 
		    style="@style/layout_vertical"
		    android:layout_weight="1"
		    android:orientation="horizontal">
        <CheckBox
            android:id="@+id/checksound"
            style="@style/layout_horizontal"
            android:layout_weight="1"
            android:text="声音"
            android:checked="false"
            android:textColor="#00c69f" />
        <CheckBox
            android:id="@+id/checktheme"
            style="@style/layout_horizontal"
            android:layout_weight="1.4"
            android:enabled="false"
            android:alpha="0.5"
            android:text="炫黑主题"
            android:checked="false"
            android:textStyle="italic"
            android:textColor="#00c69f" />
        <TextView
            android:id="@+id/textTip"
            style="@style/layout_horizontal"
            android:layout_weight="3.5"
            android:ems="10"
            android:gravity="center"
            android:textSize="0.11in"
            android:hint="Tip: 请输入"
            android:textColor="#788778"
            />
		</LinearLayout>
    </LinearLayout>

    <TableLayout
        style="@style/layout_vertical"
        android:layout_weight="3"
        android:orientation="vertical"
        android:gravity="bottom" >

        <TableRow
            android:id="@+id/tableRow0"
            style="@style/layout_horizontal"
            android:layout_weight="1" >

            <Button
                android:id="@+id/butOperAC"
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:background="@drawable/acselect"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:textSize="0.17in"
                android:text="AC" />

            <Button
                android:id="@+id/butOperDel"
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:background="@drawable/delselect"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:textSize="0.17in"
                android:text="Del" />

            <Button
                android:id="@+id/butOperSet"
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:background="@drawable/setselect"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:textSize="0.22in"
                android:text="◎" />

            <Button
                android:id="@+id/butOperRma"
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:background="@drawable/operselect"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:textSize="0.22in"
                android:text="%" />

            <Button
                android:id="@+id/butOperDiv"
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:background="@drawable/operselect"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:textSize="0.22in"
                android:text="÷" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            style="@style/layout_horizontal"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/butOperOppo"
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:background="@drawable/opposelect"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:textSize="0.22in"
                android:text="+/-" />

            <Button
                android:id="@+id/butNum7"
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:background="@drawable/numselect"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:textSize="0.22in"
                android:text="7" />

            <Button
                android:id="@+id/butNum8"
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:background="@drawable/numselect"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:textSize="0.22in"
                android:text="8" />

            <Button
                android:id="@+id/butNum9"
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:background="@drawable/numselect"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:textSize="0.22in"
                android:text="9" />

            <Button
                android:id="@+id/butOperMul"
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:background="@drawable/operselect"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:textSize="0.22in"
                android:text="×" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            style="@style/layout_horizontal"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/butOperUp"
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:background="@drawable/dafuselect"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:textSize="0.17in"
                android:text="Up" />

            <Button
                android:id="@+id/butNum4"
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:background="@drawable/numselect"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:textSize="0.22in"
                android:text="4" />

            <Button
                android:id="@+id/butNum5"
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:background="@drawable/numselect"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:textSize="0.22in"
                android:text="5" />

            <Button
                android:id="@+id/butNum6"
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:background="@drawable/numselect"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:textSize="0.22in"
                android:text="6" />

            <Button
                android:id="@+id/butOperCut"
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:background="@drawable/operselect"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:textSize="0.22in"
                android:text="—" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            style="@style/layout_horizontal"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/butOperDown"
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:background="@drawable/dafuselect"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:textSize="0.17in"
                android:text="Down" />

            <Button
                android:id="@+id/butNum1"
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:background="@drawable/numselect"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:textSize="0.22in"
                android:text="1" />

            <Button
                android:id="@+id/butNum2"
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:background="@drawable/numselect"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:textSize="0.22in"
                android:text="2" />

            <Button
                android:id="@+id/butNum3"
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:background="@drawable/numselect"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:textSize="0.22in"
                android:text="3" />

            <Button
                android:id="@+id/butOperAdd"
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:background="@drawable/operselect"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:textSize="0.22in"
                android:text="+" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            style="@style/layout_horizontal"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/butOperSpin"
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:background="@drawable/spinselect"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:textSize="0.17in"
                android:text="Spin" />

            <Button
                android:id="@+id/butNum00"
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:background="@drawable/numselect"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:textSize="0.22in"
                android:text="00" />

            <Button
                android:id="@+id/butNum0"
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:background="@drawable/numselect"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:textSize="0.22in"
                android:text="0" />

            <Button
                android:id="@+id/butNumdot"
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:background="@drawable/numselect"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:textSize="0.22in"
                android:text="." />

            <Button
                android:id="@+id/butOperOut"
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:background="@drawable/equselect"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:textSize="0.22in"
                android:text="=" />
        </TableRow>
    </TableLayout>
</LinearLayout>
<ScrollView
        android:id="@+id/scrollviewhistory"
        android:layout_width="0dp"
        android:layout_height="0dp" 
        android:paddingTop="0.25in">
    <TextView
        android:id="@+id/texthistory"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:textColor="#ffffff"
        android:gravity="right"
        android:textStyle="bold"
        android:textSize="0.15in"
        android:background="#4eadff"
        >
    </TextView>
    </ScrollView>
</FrameLayout>
